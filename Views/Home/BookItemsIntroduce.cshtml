@model IEnumerable<PBL3_DUTLibrary.Models.Book>

@foreach (var item in Model)
{
	<div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
		<div class="product d-flex flex-column ">
			<a asp-action="DetailBooks" asp-controller="Books" asp-route-id="@item.BookId" class="img-prod modify-div-img">
				<img class="img-fluid fit-img" src="@item.Image" alt="Colorlib Template">

			</a>
			<div class="text py-3 pb-4 px-3">
				<div class="d-flex">
					<div class="cat">
						<span>
							@(item.Author.Length > 10 ? item.Author.Substring(0, 10) + "..." : item.Author)
						</span>
					</div>
				</div>
				<h3><a asp-action="DetailBooks" asp-controller="Books" asp-route-id="@item.BookId">@(item.Title.Length > 40 ? item.Title.Substring(0, 40) + "..." : item.Title)</a></h3>
				<div class="pricing">
					<p class="price">
						<span>
							@if (item.Available == 1)
							{
								@: Available
							}
							@if (item.Available != 1)
							{
								@: Not Available
							}
						</span>
					</p>
				</div>
				@* <p class="bottom-area d-flex px-3">
					<a href="#" class="add-to-cart text-center py-2 mr-1"><span>Add to wishlist<i class="ion-ios-add ml-1"></i></span></a>
					<a href="#" class="buy-now text-center py-2">Borrow<span><i class="ion-ios-cart ml-1"></i></span></a>
				</p> *@
			</div>
		</div>
	</div>
}
<style>
	.modify-div-img {
		min-height: 400px;
		display: flex !important;
		justify-content: center;
		flex-direction: column;
	}

	.fit-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
</style>