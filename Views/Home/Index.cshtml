<section class="ftco-section testimony-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="services-flow">
                    <div class="services-2 p-4 d-flex ftco-animate">
                        <div class="icon">
                            <span class="flaticon-bag"></span>
                        </div>
                        <div class="text">
                            <h3>Library Access</h3>
                            <p class="mb-0">Access thousands of books and resources across various genres to support your learning and enjoyment.</p>
                        </div>
                    </div>
                    <div class="services-2 p-4 d-flex ftco-animate">
                        <div class="icon">
                            <span class="flaticon-heart-box"></span>
                        </div>
                        <div class="text">
                            <h3>Valuable Resources</h3>
                            <p class="mb-0">Access a wide range of books, journals, and other resources to enrich your learning journey.</p>
                        </div>
                    </div>
                    <div class="services-2 p-4 d-flex ftco-animate">
                        <div class="icon">
                            <span class="flaticon-payment-security"></span>
                        </div>
                        <div class="text">
                            <h3>24/7 Access</h3>
                            <p class="mb-0">Enjoy round-the-clock access to our digital library and resources anytime, anywhere.</p>
                        </div>
                    </div>
                    <div class="services-2 p-4 d-flex ftco-animate">
                        <div class="icon">
                            <span class="flaticon-customer-service"></span>
                        </div>
                        <div class="text">
                            <h3>Expert Guidance</h3>
                            <p class="mb-0">Get expert assistance from our library staff for any research or book-related inquiries.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="heading-section ftco-animate mb-5">
                    <h2 class="mb-4">What Our Readers Say</h2>
                    <p>Take a look at what our library members have to say about the convenience, functionality, and positive impact that our digital library platform brings to their daily academic and reading life.</p>
                </div>

                <div class="carousel-testimony owl-carousel">
                    @{
                        var feedbacks = ViewBag.Feedbacks as List<FeedbackCustomers>;
                        if (feedbacks != null && feedbacks.Count > 0)
                        {
                            foreach (var fb in feedbacks)
                            {
                                <div class="item">
                                    <div class="testimony-wrap">
                                        <div class="user-img mb-4" style="background-image: url('@Url.Content(!string.IsNullOrEmpty(fb.profilePicture) ? fb.profilePicture : "~/images/person_1.jpg")')">
                                            <span class="quote d-flex align-items-center justify-content-center">
                                                <i class="icon-quote-left"></i>
                                            </span>
                                        </div>
                                        <div class="text">
                                            <p class="mb-4 pl-4 line">@fb.feedback</p>
                                            <p class="name">@(!string.IsNullOrEmpty(fb.name) ? fb.name : "Customer")</p>
                                            <span class="position">@(!string.IsNullOrEmpty(fb.email) ? fb.email : "email")</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
                @await Html.PartialAsync("FeedbackCustomer")
            </div>
        </div>
    </div>
</section>
