@using PBL3_DUTLibrary.Data
@model IEnumerable<PBL3_DUTLibrary.Models.Book>

@{
    ViewData["Title"] = "Home Page";
}

<section id="home-section" class="hero">
    @if (TempData["Error"] != null)
    {
        <div id="feedback-alert" class="alert alert-danger alert-dismissible fade show" role="alert" style="position: fixed; top: 30px; right: 30px; z-index: 9999; min-width: 250px;">
            @TempData["Error"]
        </div>
    }
    <div class="home-slider owl-carousel">
        <div class="slider-item js-fullheight">
            <div class="overlay"></div>
            <div class="container-fluid p-0">
                <div class="row d-md-flex no-gutters slider-text align-items-center justify-content-end" data-scrollax-parent="true">
                    @* picture background *@
                    <img class="one-third order-md-last img-fluid" src="~/images/image-background-home-1.png" alt="">
                    <div class="one-forth d-flex align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                        <div class="text">
                            <span class="subheading">#New Arrival</span>
                            <div class="horizontal">
                                <h1 class="mb-4 mt-3">Library Collection 2025</h1>
                                <p class="mb-4">
                                    Discover a world of knowledge and imagination with our newest books.
                                    Your next great read awaits!
                                </p>

                                <p><a asp-controller="Books" asp-action="Index" class="btn-custom">Discover Now</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="slider-item js-fullheight">
            <div class="overlay"></div>
            <div class="container-fluid p-0">
                <div class="row d-flex no-gutters slider-text align-items-center justify-content-end" data-scrollax-parent="true">
                    @* picture background *@
                    <img class="one-third order-md-last img-fluid" src="~/images/image-background-home-2.png" alt="">
                    <div class="one-forth d-flex align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                        <div class="text">
                            <span class="subheading">#New Arrival</span>
                            <div class="horizontal">
