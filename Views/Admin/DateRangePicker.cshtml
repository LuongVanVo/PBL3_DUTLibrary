<style>
    .date-picker-container {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .input-group-text {
        background-color: #0d6efd;
        color: white;
        border: 1px solid #0d6efd;
    }

    .datepicker-dropdown {
        box-shadow: 0 5px 10px rgba(0,0,0,0.1);
    }
</style>

<form method="get">
    <div class="row mb-4">
        <div class="col-md-6">
            <label for="startDate" class="form-label fw-bold">From:</label>
            <div class="input-group date">
                <input type="text" class="form-control" id="startDate" name="startDate" placeholder="DD/MM/YYYY" value="@(ViewBag.SelectedStartDate)" >
                <span class="input-group-text bg-primary text-white">
                    <i class="fas fa-calendar"></i>
                </span>
            </div>
        </div>
        <div class="col-md-6">
            <label for="endDate" class="form-label fw-bold">To:</label>
            <div class="input-group date">
                <input type="text" class="form-control" id="endDate" name="endDate" placeholder="DD/MM/YYYY" value="@(ViewBag.SelectedEndDate)">
                <span class="input-group-text bg-primary text-white">
                    <i class="fas fa-calendar"></i>
                </span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Statistic</button>
</div>
</form>


<!-- jQuery (bắt buộc cho Bootstrap Datepicker) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Bootstrap Bundle JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Bootstrap Datepicker JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<!-- Bootstrap Datepicker tiếng Việt -->
@* <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.vi.min.js"></script> *@

<script>
    $(document).ready(function() {
        // Khởi tạo datepicker cho trường startDate
        $('#startDate').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            todayHighlight: true,
            language: 'en',
            orientation: 'bottom'
        });

        // Khởi tạo datepicker cho trường endDate
        $('#endDate').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true,
            todayHighlight: true,
            language: 'en',
            orientation: 'bottom'
        });

        // Kích hoạt datepicker khi nhấp vào biểu tượng lịch
        $('.input-group-text').click(function() {
            $(this).closest('.input-group').find('input').datepicker('show');
        });
    });
</script>