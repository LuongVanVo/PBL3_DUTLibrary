<div class="row">
    <div class="col-xl-3 mb-30">
        <div class="card-box height-100-p widget-style1">
            <div class="d-flex flex-wrap align-items-center">
                <div class="progress-data">
                    @* <div id="chart"></div> *@
                    <svg viewBox="0 0 100 100">
                        <!-- Background circle - made smaller by increasing the viewBox space around it -->
                        <circle cx="50" cy="50" r="35" fill="white" stroke="#E6E6E6" stroke-width="6" />

                        <!-- Progress arc - adjusted for the smaller size -->
                        <circle cx="50" cy="50" r="35" fill="transparent" stroke="#ff0000" stroke-width="6"
                                stroke-dasharray="219.9" stroke-dashoffset="43.98"
                                transform="rotate(-90 50 50)" />

                        <!-- Center text - adjusted font size for the smaller circle -->
                        <text x="50" y="55" font-family="Arial, sans-serif" font-size="18" font-weight="bold"
                              text-anchor="middle" fill="#333333">@ViewBag.Stats.TotalBooks</text>
                    </svg>
                </div>
                <div class="widget-data">
                    @* <div class="h4 mb-0">@ViewBag.Stats.TotalBooks</div> *@
